#include <stdio.h>
#include <malloc.h>

int main() {
   int n;
   float summ = 0;
   float a,c;
   printf("Какое количество раз рассчитать объём тетраэра? \n");
   scanf("%d", &n);
   float list[n];
   for (int i = 0; i < n; i++) {
   printf("Введите длину стороны правильного тетраэдра в метрах: \n");
   scanf("%f",&a);
   c=(a*a*a*1.4142)/12;
   list[i] = c;
   printf("Объём = %f m3 \n",c);
   summ =+ c;
  };
  printf("%f - Среднее арифметическое \n",summ/n);
    float test; 
    int c1 = 0;//вводим счетчик количества раз минимальных значений
    int c2 = 0;//вводим счетчик количества раз максимальных значений
    float *nlst;//вводим указатель
    nlst = list;
    printf("История результатов:");
    for (int i = 0; i < n; i++)
    {
        printf(" %.4f ", *(nlst+i));//выводим историю результатов
    }
    printf("\n Введите число для сравнения: ");
    scanf("%f", &test);
    for(int i = 0; i < n; i++)
    {
        if( *(nlst+i) < test)//проверяем каждый элемент массива
        {
            c1 += 1;
        };
        if( *(nlst+i) > test)
        {
            c2 += 1;
        }
   };
    printf ("Количество элементов массива, которые меньше введенного числа: %i", c1);
   
    printf ("\n Количество элементов массива, которые больше введенного числа: %i", c2);
}
